@model IEnumerable<DataBaseConnection.Models.DataBaseItem>

@{
	ViewData["Title"] = "Sensors";
}

<form method="post">
	<div class="text-center">
		<button type="submit" asp-action="SaveSortedTableToExel">Save as Exel</button>
		<button type="submit" asp-action="SaveSortedTableToXml">Save as Xml</button>
	</div>
</form>

<h1>Data from sensors</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.SensorName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DataType)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Position)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Value)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Date)
			</th>
		</tr>
	</thead>


	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.SensorName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DataType)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Position)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Value)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Date)
				</td>
			</tr>
		}
	</tbody>

</table>