@model DataBaseConnection.Models.DataType_Position_Time_Selection
@{
	ViewData["Title"] = "Select Sensor Properties";
}


<div class="row">
	<div class="col-md-4">
		<form asp-action="SelectSensor">
			<div asp-validation-summary="ModelOnly" class="text-danger"/>
			<input type="hidden" asp-for="Id" />
			<input type="hidden" asp-for="Value" />
			<input type="hidden" asp-for="SensorName" />

			@* <input type="hidden" asp-for="Date" /> *@
			
			<div class="form-group">
				<label asp-for="DataType" class="control-label">DataType</label>
				@* <input asp-for="DataType" class="form-control" /> *@
				<select asp-for="DataType" class="form-control">
					<option value="Temperature">Temperature</option>
					<option value="Humidity">Humidity</option>
					<option value="Pressure">Pressure</option>
					<option value="Dust">Dust</option>
					<option value="Vibration">Vibration</option>
					<option value="Incline">Incline</option>
					<option value="Light">Light</option>
				</select>
				<span asp-validation-for="DataType" class="text-danger" />
			</div>

			<div class="form-group">
				<label asp-for="Position" class="control-label">Position</label>
				<input asp-for="Position" class="form-control" value="1" />
				<span asp-validation-for="Position" class="text-danger" />
			</div> 


			<div class="form-group">
				<label asp-for="Date1" class="control-label">Start Date</label>
				@* <input asp-for="Position" class="form-control" /> *@
				<input asp-for="Date1" type="datetime-local" class="form-control" value="2022-07-17T19:30" min="2000-07-17T19:30" max="2100-07-17T19:30" />
				<span asp-validation-for="Date1" class="text-danger" />
			</div>
			
			<div class="form-group">
				<label asp-for="Date2" class="control-label">Stop Date</label>
				@* <input asp-for="Position" class="form-control" /> *@
				<input asp-for="Date2" type="datetime-local" class="form-control" value="2022-07-17T19:30" min="2000-07-17T19:30" max="2100-07-17T19:30" />
				<span asp-validation-for="Date2" class="text-danger" />
			</div>




			<br/>

			<div class="form-group">
				<input type="submit" value="Select" class="btn btn-primary" />
			</div>

			<br/>



		</form>
	</div>
</div>
